bool Flor::hayRepetidos(std::vector<Habilidad>& hs){
	if (hs.size() > 3){
		return true;
	} else if (hs.size() <= 1){
		return false;
	} else {
		
		int i = 0;
		int j;
		int comparador;
		bool res = false;
		while(i <= hs.size() - 2){

			comparador = hs.at(i);
			j = i + 1;

			while(j < hs.size()){
				if(comparador == hs.at(j))
					res = true;
				j++;
			}
			i++;
		}
		return res;
	}
}

void Flor::quitarRepetidos(std::vector<Habilidad>& hs){
	int i = hs.size() - 1;
	int contadorA = 0;
	int contadorE = 0;
	int contadorG = 0;

	while(i >= 0){

		if(hs.at(i) == 0){
			contadorG += 1;
		} else if(hs.at(i) == 1){
			contadorA += 1;
		} else {
			contadorE += 1;
		}
		hs.pop_back();
		i--;
	}

	if(contadorG > 0){
		hs.push_back(Generar);
	}
	if(contadorA > 0){
		hs.push_back(Atacar);
	}
	if(contadorE > 0){
		hs.push_back(Explotar);
	}
}

bool Flor::atacarPertenece(vector<Habilidad> hs){
	int i = 0;
	bool res = false;

	while(i < hs.size()){
		if(hs.at(i) == Atacar)
			res = true;
		i++;
	}
	return res;
}
