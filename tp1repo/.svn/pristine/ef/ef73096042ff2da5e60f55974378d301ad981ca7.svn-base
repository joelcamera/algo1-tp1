bool Vampiro::vidaEnRango(int v){
	return (v >= 0 && v <= 100);
}

void Vampiro::ponerVidaEnRango(int& v){
	if(v < 0){
		v = 0;
	} else {
		v = 100;
	}
}

bool Vampiro::cuantoPegaEnRango(int cP){
	return (cP > 0);
}

void Vampiro::ponerCuantoPegaEnRango(int& cP){
	cP = 1;
}